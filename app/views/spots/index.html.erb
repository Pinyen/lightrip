<h1>Listing spots</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Zoom</th>
    <th>Address</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Info</th>
    <th>Opentime</th>
    <th>Attr1</th>
    <th>Attr2</th>
    <th>Attr3</th>
    <th>Attr4</th>
    <th>Attr5</th>
    <th>pic</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.id %></td>
    <td><%= spot.name %></td>
    <td><%= spot.zoom %></td>
    <td><%= spot.address %></td>
    <td><%= spot.lat %></td>
    <td><%= spot.lon %></td>
    <td><%= spot.info %></td>
    <td><%= spot.opentime %></td>
    <td><%= spot.attr1 %></td>
    <td><%= spot.attr2 %></td>
    <td><%= spot.attr3 %></td>
    <td><%= spot.attr4 %></td>
    <td><%= spot.attr5 %></td>
    <td></td>
    <td class="picture"> <% string_path = '/img/' + spot.id.to_s %> 
         <%= image_tag(string_path, :size => "50x50")%> </td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Upload Picture', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, confirm: 'Are you sure?', method: :delete %></td>
    
  </tr>
<% end %>
</table>

